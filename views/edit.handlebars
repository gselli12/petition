<h3>Edit your profile</h3>

<form class="edit" action="/edit" method="post">
    <div class="column">
        <input type="input" name="firstEdit" value="{{info.first}}" placeholder ="First Name" ">
        <h5>First Name</h5>
        <input type="input" name="lastEdit" value="{{info.last}}" placeholder ="Last Name" >
        <h5>Last Name</h5>
        <input type="input" name="mailEdit" value="{{info.email}}" placeholder ="Email" >
        <h5>Email</h5>
        <input type="password" name="pwEdit" value="" placeholder ="Password">
        <h5>Password</h5>
        <input type="input" name="ageEdit" value="{{info.age}}" placeholder ="Age" >
        <h5>Age</h5>
        <input type="input" name="cityEdit" value="{{info.city}}" placeholder ="City" >
        <h5>City</h5>
        <input type="input" name="urlEdit" value="{{info.url}}" placeholder ="URL" >
        <h5>URL</h5>
        <button type="submit" formmethod="POST">Log in</button>
    </div>
</form>
